<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens50dp" >

    <RelativeLayout
        android:id="@+id/rlayout_title_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens50dp"
        android:background="@color/colorFFFFFF" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llayout_left_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens50dp"
        android:layout_marginLeft="@dimen/dimens10dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal" >

        <com.smk.card.pay.view.CircularImage
            android:id="@+id/img_header_L"
            android:layout_width="@dimen/dimens32dp"
            android:layout_height="@dimen/dimens32dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_left_titleL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5dp"
            android:textColor="@color/color333333"
            android:textSize="@dimen/dimens16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_left_titleR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5dp"
            android:textColor="@color/color333333"
            android:textSize="@dimen/dimens16sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/ll_left_title_layoutR"
            android:layout_width="@dimen/dimens16dp"
            android:layout_height="@dimen/dimens16dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/ll_txt_left_titleR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dimens10dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_center_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimens10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_center_title"
            android:layout_width="@dimen/dimens80dp"
            android:layout_height="@dimen/dimens35dp"
            android:layout_margin="@dimen/dimens5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:textSize="@dimen/dimens20sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_right_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens5dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_right_titleL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens5dp"
            android:textColor="@color/color333333"
            android:textSize="@dimen/dimens16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/img_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dimens5dp" />

            <RelativeLayout
                android:id="@+id/rlayout_root_text_right"
                android:layout_width="@dimen/dimens20dp"
                android:layout_height="@dimen/dimens20dp"
                android:layout_marginBottom="@dimen/dimens20dp"
                android:layout_marginLeft="@dimen/dimens20dp" >

                <TextView
                    android:id="@+id/txt_right_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dimens12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_right_titleR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5dp"
            android:layout_marginRight="@dimen/dimens5dp"
            android:visibility="gone" />

        <com.smk.card.pay.view.CircularImage
            android:id="@+id/img_header"
            android:layout_width="@dimen/dimens32dp"
            android:layout_height="@dimen/dimens32dp"
            android:layout_marginRight="@dimen/dimens5dp"
            android:background="@drawable/nav_head"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_right_titleR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimens5dp"
            android:textColor="@color/color333333"
            android:textSize="@dimen/dimens16sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/title_view_line"
        style="@style/splitLineStyle"
        android:layout_height="@dimen/dimens1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorEDEDED" />

</RelativeLayout>